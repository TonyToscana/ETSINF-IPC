<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ModifyController">
    <children>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label text="ID:">
                    <HBox.margin>
                        <Insets bottom="15.0" left="15.0" top="20.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="idField" prefWidth="190.0">
                    <HBox.margin>
                        <Insets bottom="15.0" right="15.0" top="15.0" />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label text="Full Name:">
                    <HBox.margin>
                        <Insets bottom="15.0" left="15.0" top="20.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="nameField" prefWidth="190.0">
                    <HBox.margin>
                        <Insets bottom="15.0" right="15.0" top="15.0" />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="City:">
               <HBox.margin>
                  <Insets bottom="15.0" left="15.0" top="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="cityField" prefWidth="190.0">
               <HBox.margin>
                  <Insets bottom="15.0" right="15.0" top="15.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Province:">
               <HBox.margin>
                  <Insets bottom="15.0" left="15.0" top="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="provinceField" prefWidth="190.0">
               <HBox.margin>
                  <Insets bottom="15.0" right="15.0" top="15.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Image:">
               <HBox.margin>
                  <Insets bottom="15.0" left="15.0" top="20.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="imageDropdown" minHeight="25.0" prefHeight="25.0" prefWidth="190.0">
               <HBox.margin>
                  <Insets bottom="15.0" right="15.0" top="15.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="okButton" mnemonicParsing="false" onAction="#okAction" onKeyPressed="#onOkPressed" prefWidth="80.0" text="Ok">
                    <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAction" onKeyPressed="#onCancelPressed" prefWidth="80.0" text="Cancel">
                    <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
